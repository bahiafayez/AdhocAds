<%= form_for(@ad) do |f| %>
  <% if @ad.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@ad.errors.count, "error") %> prohibited this ad from being saved:</h2>

      <ul>
      <% @ad.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :URL %><br />
    <%= f.text_field :URL %>
  </div>
  <div class="field">
    <%= f.label :duration %><br />
    <%= f.number_field :duration %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>
  
  <label for="tags">Tags</label><br/>
  
		<% @tags.each do |tag| %>
			<%= check_box_tag(
                            "ad[tag_list][#{tag.id}]", 
                            "1", 
                            @ad.tags.detect{|d| d == tag}) %>
			<%= "#{tag.name}"%><br />
		<% end %>
  
  
  
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
