<% content_for :header do %>
  <h1>Advertisements</h1>
<% end %>

<ul class="tabs">
	<li class="active"><%= link_to "Index", "#" %></li>
	<li><%= link_to "New", new_backend_ad_path %></li>
</ul>

<table class="zebra-striped">
	<thead>
  <tr>
    <th>Url</th>
    <th>Duration</th>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
</thead>
<% @ads.each do |ad| %>
  <tr>
    <td><%= ad.url %></td>
    <td><%= ad.duration %></td>
    <td><%= ad.description %></td>
    <td class="row-actions"><%= link_to 'Show', backend_ad_path(ad) %></td>
    <td class="row-actions"><%= link_to 'Edit', edit_backend_ad_path(ad) %></td>
    <td class="row-actions"><%= link_to 'Destroy', backend_ad_path(ad), confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<div><%= paginate @ads %></div>

<% content_for :sidebar do %>
	<% form_tag backend_ads_path, :method => 'get' do %>
	  <p>
	    <%= text_field_tag :search, params[:search] %>
	    <%= submit_tag "Search", :name => nil %>
	  </p>
	<% end %>
<% end %>
